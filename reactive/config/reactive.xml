<?xml version="1.0" encoding="UTF-8"?>

<!-- the default configuration for the reactive exercise -->
<configuration name="ex1" mode="reactive">

	<!-- load settings -->
	<settings import="config/settings_default.xml" />	
	
	<!-- load the topology-->
	<topology import="config/topology/france.xml" />
	
	<!-- load agents -->
	<agents import="config/agents.xml" />
	
	<!-- define task distribution -->
	<tasks number="10" rngSeed="3590420242192152424">
		<!--
			the probabilities, rewards and weight of tasks
		-->
		<probability distribution="uniform" min="0.0" max="1.0" />
		<reward distribution="uniform" policy="long-distances" min="1000" max="700000" />
		<weight distribution="constant" value="3" />
		
		<!--
			the probability that there is no task in a city
		-->
		<no-task distribution="uniform" min="0.2" max="0.4" />
	</tasks>
	
	<!-- the companies and vehicles in the simulation -->
	<companies>
		<company name="Company A">
			<!-- the first vehicle (blue) -->
			<vehicle name="Vehicle 1">
				<set color="#0000ff" />
				<set home="Paris" />
				<set speed="220" />
				<set capacity="30" />
				<set cost-per-km="5" />
			</vehicle>
		</company>
		<company name="Company B">
			<!-- the first vehicle (blue) -->
			<vehicle name="Vehicle 2">
				<set color="#00ff00" />
				<set home="Paris" />
				<set speed="220" />
				<set capacity="30" />
				<set cost-per-km="5" />
			</vehicle>
		</company>
		<company name="Company C">
			<!-- the first vehicle (blue) -->
			<vehicle name="Vehicle 3">
				<set color="#ff0000" />
				<set home="Paris" />
				<set speed="220" />
				<set capacity="30" />
				<set cost-per-km="5" />
			</vehicle>
		</company>
		<company name="Company D">
			<!-- the first vehicle (blue) -->
			<vehicle name="Vehicle 4">
				<set color="#ffff00" />
				<set home="Paris" />
				<set speed="220" />
				<set capacity="30" />
				<set cost-per-km="5" />
			</vehicle>
		</company>
	</companies>
	
</configuration>